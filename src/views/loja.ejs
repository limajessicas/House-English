<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loja Virtual</title>
    <link rel="stylesheet" type="text/css" href="stylesheets/loja.css">
</head>

<body>
    <header class="cabecalho">
        <img class="cabecalho-imagem" src="images/bandeira inglaterra.png" alt="logo da comunidade">
        <nav class="cabecalho-menu">
            <a class="cabecalho-menu-item"
                href="/">Home</a>
            <% if(usuario !=undefined){ %>
        <a
          class="cabecalho-menu-item"
          href="/perfil/<%=usuario.pk_id_cliente%>"
        >
          <%= usuario.nome %>
        </a>
        <% }else{ %>
        <a class="cabecalho-menu-item" href="/login">Login</a>
        <%}%>
        </nav>
    </header>
    <main>
        <div class="conteudo"></div>

        <section class="items">
            <% produtos.forEach(itemsDaListaProdutos =>{ %>
            <div class="produtos" id="<%=itemsDaListaProdutos.pk_id_produto%>">
            <form action="/carrinho/<%=itemsDaListaProdutos.pk_id_produto%>" method="GET">
                <img class="imagens" src="images/<%= itemsDaListaProdutos.nome_imagem %>" alt="<%= itemsDaListaProdutos.nome %>"></img>
                <br><br>
                <p><strong><%= itemsDaListaProdutos.nome %> </strong></p>
                <p><strong> R$ <%= itemsDaListaProdutos.valor %></strong></p>
                <br><br>
                <button class="comprar" type="submit">Adicionar ao carrinho</button>
                       </form>
            </div>
            <% }) %>
        </section>
        <br><br>
        <br><br>
        <br><br>
        <br><br>
        <br><br>
        <br><br>

        

    </main>
<%- include("./partials/footer.ejs") %>
</body>

</html>